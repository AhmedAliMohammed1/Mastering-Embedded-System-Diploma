#include <stdio.h>
#include <stdlib.h>

int main(void) {
	float x;
		printf("Enter a number:");
		fflush(stdin); fflush(stdout);
			scanf("%f",&x);
			if(x==0){
				printf("you enterd zero");
			}else{
				x>=0?printf("%*.*f is positive",1,3,x):printf("%0.2f is negative",x);
			}
	return 0;
}
