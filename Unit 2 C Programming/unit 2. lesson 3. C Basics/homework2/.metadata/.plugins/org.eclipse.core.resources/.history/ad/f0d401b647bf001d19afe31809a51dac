#include <stdio.h>
#include <stdlib.h>

int main(void) {
	float x,y,z,max=0;
	printf("Enter three numbers");
	fflush(stdin); fflush(stdout);
		scanf("%d %d %d",&x,&y,&z);
		if(x>y){
			if(x>z){
				max=x;
			}else{
				max=z;
			}
		}else{
			if(y>z){
				max=y;
			}else{
				max=z;
			}
		}
		printf("%d is the largest :",max);
	return 0;
}
